    <style>
        :root {
            --primary-bg: #1a1f26;
            --secondary-bg: #1B232D;
            --text-primary: #ffffff;
            --text-secondary: #8b949e;
            --accent-color: #22c55e;
            --accent-hover: #2E8B57;
            --danger-color: #ef4444;
            --danger-hover: #dc2626;
            --border-color: #2d3643;
            --hover-bg: #262d36;
            --border-radius: 8px;
        }

        body {
            background-color: var(--primary-bg);
            color: var(--text-primary);
            font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, sans-serif;
        }

        .dashboard-card {
            background-color: var(--secondary-bg);
            border-radius: var(--border-radius);
            border: 1px solid var(--border-color);
            padding: 1.5rem;
            margin-bottom: 1rem;
            height: 100%;
        }

        .stats-card {
            background-color: var(--secondary-bg);
            border-radius: var(--border-radius);
            padding: 1.25rem;
            margin-bottom: 1rem;
            border: 1px solid var(--border-color);
            transition: transform 0.3s ease;
        }

        .stats-card:hover {
            transform: translateY(-5px);
        }

        .stats-icon {
            width: 48px;
            height: 48px;
            background-color: rgba(34, 197, 94, 0.1);
            border-radius: 12px;
            display: flex;
            align-items: center;
            justify-content: center;
            margin-bottom: 1rem;
        }

        .stats-icon i {
            color: var(--accent-color);
            font-size: 1.5rem;
        }

        .stats-value {
            font-size: 1.75rem;
            font-weight: bold;
            margin-bottom: 0.5rem;
        }

        .stats-label {
            color: var(--text-secondary);
            font-size: 0.875rem;
        }

        .trend-indicator {
            display: inline-flex;
            align-items: center;
            gap: 0.25rem;
            padding: 0.25rem 0.5rem;
            border-radius: 1rem;
            font-size: 0.875rem;
        }

        .trend-up {
            background-color: rgba(34, 197, 94, 0.1);
            color: var(--accent-color);
        }

        .trend-down {
            background-color: rgba(239, 68, 68, 0.1);
            color: var(--danger-color);
        }

        .chart-container {
            position: relative;
            margin: auto;
            height: 300px;
        }

        .data-filters {
            background-color: var(--secondary-bg);
            border: 1px solid var(--border-color);
            border-radius: var(--border-radius);
            padding: 1rem;
            margin-bottom: 1rem;
        }

        .filter-input {
            background-color: var(--primary-bg);
            border: 1px solid var(--border-color);
            color: var(--text-primary);
            border-radius: var(--border-radius);
            padding: 0.5rem;
        }

        .data-table  table thead tr th {
            background-color: var(--secondary-bg);
            border-radius: var(--border-radius);
            overflow: hidden;
            color: var(--text-primary);
        }

        .data-table table tbody tr th {
            background-color: var(--primary-bg);
            color: var(--text-primary);
            border-bottom: 1px solid var(--accent-color);
            padding: 1rem;
        }

        .data-table table tbody tr td {
            border-bottom: 1px solid var(--accent-color);
            padding: 1rem;
            color: var(--text-primary);
            background-color: var(--secondary-bg);
        }

        

        .data-table tbody tr:hover {
            background-color: var(--hover-bg);
        }

        .export-btn {
            background-color: var(--secondary-bg);
            border: 1px solid var(--border-color);
            color: var(--text-primary);
            padding: 0.5rem 1rem;
            border-radius: var(--border-radius);
            transition: all 0.3s ease;
        }

        .export-btn:hover {
            background-color: var(--hover-bg);
            color: var(--accent-color);
        }

        /* Responsive Breakpoints */
        /* S - 320px */
        @media (max-width: 320px) {
            .stats-card {
                padding: 1rem;
            }
            .stats-value {
                font-size: 1.25rem;
            }
            .dashboard-card {
                padding: 1rem;
            }
            .chart-container {
                height: 200px;
            }
            .data-filters {
                flex-direction: column;
                gap: 0.5rem;
            }
            .export-btn {
                width: 100%;
                margin-bottom: 0.5rem;
            }
            .stats-icon {
                width: 36px;
                height: 36px;
            }
        }

        /* M - 375px */
        @media (min-width: 321px) and (max-width: 375px) {
            .chart-container {
                height: 250px;
            }
            .stats-value {
                font-size: 1.5rem;
            }
            .data-filters {
                flex-wrap: wrap;
            }
        }

        /* L - 425px */
        @media (min-width: 376px) and (max-width: 425px) {
            .chart-container {
                height: 275px;
            }
            .stats-card {
                margin-bottom: 1rem;
            }
        }

        /* Tablet - 768px */
        @media (min-width: 426px) and (max-width: 768px) {
            .stats-card {
                margin-bottom: 1.5rem;
            }
            .chart-container {
                height: 350px;
            }
        }

        /* Laptop - 1024px */
        @media (min-width: 769px) and (max-width: 1024px) {
            .chart-container {
                height: 400px;
            }
            .dashboard-card {
                padding: 1.75rem;
            }
        }

        /* Laptop L - 1440px */
        @media (min-width: 1025px) and (max-width: 1440px) {
            .dashboard-card {
                padding: 2rem;
            }
            .chart-container {
                height: 450px;
            }
        }

        /* 4K - 2560px */
        @media (min-width: 1441px) {
            .stats-value {
                font-size: 2rem;
            }
            .dashboard-card {
                padding: 2.5rem;
