    <script>
        // Sales Chart
        const createSalesChart = () => {
            const ctx = document.getElementById('salesChart').getContext('2d');
            const gradient = ctx.createLinearGradient(0, 0, 0, 400);
            gradient.addColorStop(0, 'rgba(34, 197, 94, 0.2)');
            gradient.addColorStop(1, 'rgba(34, 197, 94, 0)');

            return new Chart(ctx, {
                type: 'line',
                data: {
                    labels: ['Jan', 'Feb', 'Mar', 'Apr', 'May', 'Jun', 'Jul', 'Aug', 'Sep', 'Oct', 'Nov', 'Dec'],
                    datasets: [{
                        label: 'Sales Revenue',
                        data: [65110, 70000, 62000, 75000, 68000, 80000, 85000, 82000, 88000, 92000, 95000, 100000],
                        borderColor: 'rgb(34, 197, 94)',
                        backgroundColor: gradient,
                        tension: 0.4,
                        fill: true,
                        pointBackgroundColor: 'rgb(34, 197, 94)',
                        pointBorderColor: '#fff',
                        pointBorderWidth: 2,
                        pointRadius: 4,
                        pointHoverRadius: 6
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    plugins: {
                        legend: {
                            display: true,
                            position: 'top',
                            labels: {
                                color: '#8b949e',
                                font: {
                                    size: 12
                                }
                            }
                        },
                        tooltip: {
                            mode: 'index',
                            intersect: false,
                            backgroundColor: '#1B232D',
                            titleColor: '#ffffff',
                            bodyColor: '#8b949e',
                            borderColor: '#2d3643',
                            borderWidth: 1,
                            padding: 12,
                            displayColors: false,
                            callbacks: {
                                label: function(context) {
                                    return `Revenue: $${context.parsed.y.toLocaleString()}`;
                                }
                            }
                        }
                    },
                    scales: {
                        x: {
                            grid: {
                                color: '#2d3643',
                                drawBorder: false
                            },
                            ticks: {
                                color: '#8b949e'
                            }
                        },
                        y: {
                            grid: {
                                color: '#2d3643',
                                drawBorder: false
                            },
                            ticks: {
                                color: '#8b949e',
                                callback: function(value) {
                                    return '$' + value.toLocaleString();
                                }
                            }
                        }
                    }
                }
            });
        };

        // Initialize date filters
        const initializeDateFilters = () => {
            const today = new Date();
            const startDate = document.querySelector('input[type="date"]:first-of-type');
            const endDate = document.querySelector('input[type="date"]:last-of-type');
            
            // Set default date range (last 30 days)
            const thirtyDaysAgo = new Date(today);
            thirtyDaysAgo.setDate(today.getDate() - 30);
            
            startDate.value = thirtyDaysAgo.toISOString().split('T')[0];
            endDate.value = today.toISOString().split('T')[0];
            
            // Add event listeners
            startDate.addEventListener('change', updateChartData);
            endDate.addEventListener('change', updateChartData);
        };

        // Handle time period changes
        const handleTimePeriodChange = () => {
            const periodSelect = document.querySelector('.filter-input');
            periodSelect.addEventListener('change', (e) => {
                updateChartData(e.target.value);
            });
        };

        // Update chart data based on selected period and date range
        const updateChartData = (period = 'daily') => {
            // Simulate API call to get data
            // In production, this would fetch real data from your backend
            const generateRandomData = (points) => {
                return Array.from({ length: points }, () => 
                    Math.floor(Math.random() * 50000) + 50000
                );
            };

            const chart = Chart.getChart('salesChart');
            if (chart) {
                const data = generateRandomData(12);
                chart.data.datasets[0].data = data;
                chart.update();
            }
        };

        // Export functionality
        const initializeExportButtons = () => {
            const pdfBtn = document.querySelector('.export-btn:first-of-type');
            const excelBtn = document.querySelector('.export-btn:last-of-type');

            pdfBtn.addEventListener('click', () => {
                alert('Exporting PDF... (Implementation required)');
                // Implement PDF export logic
            });

            excelBtn.addEventListener('click', () => {
                alert('Exporting Excel... (Implementation required)');
                // Implement Excel export logic
            });
        };

        // Responsive table handling
        const initializeResponsiveTables = () => {
            const tables = document.querySelectorAll('.data-table');
            tables.forEach(table => {
                if (window.innerWidth < 768) {
                    table.classList.add('table-responsive');
                }
            });

            window.addEventListener('resize', () => {
                tables.forEach(table => {
                    if (window.innerWidth < 768) {
                        table.classList.add('table-responsive');
                    } else {
                        table.classList.remove('table-responsive');
                    }
                });
            });
        };

        // Initialize everything when DOM is loaded
        document.addEventListener('DOMContentLoaded', () => {
            createSalesChart();
            initializeDateFilters();
            handleTimePeriodChange();
            initializeExportButtons();
            initializeResponsiveTables();
        });

        // Handle window resize for chart responsiveness
        window.addEventListener('resize', () => {
            const chart = Chart.getChart('salesChart');
            if (chart) {
                chart.resize();
