<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>Category Management</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/css/admin/productDelete.css">
</head>

<body>
   <!-- Include Sidebar (similar to reference code) -->
  <%- include('./layout/asidebar.ejs') %>

  <main class="main-content">
    <div class="container-fluid">
      

        <div class="container py-5">
            <div class="card bg-dark text-light shadow-lg">
                <div class="card-header border-bottom border-secondary">
                    <h2 class="card-title mb-0">Soft Deleted Category</h2>
                </div>
                
                <div class="card-body">
                    <% if (deletedProducts && deletedProducts.length > 0) { %>
                        <div class="table-responsive">
                            <table class="table table-dark table-hover">
                                <thead>
                                    <tr>
                                        <th scope="col">Category Name</th>
                                        <th scope="col">Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% deletedProducts.forEach(product => { %>
                                        <tr>
                                            <td class="align-middle"><%= product.name %></td>
                                            <td>
                                                <div class="btn-group" role="group">
                                                    <button class="btn btn-recover me-2" id="btn-recover" data-id="<%= product._id %>">
                                                        <i class="fas fa-undo-alt me-1"></i> Recover
                                                    </button>
                                                    <button class="btn btn-delete btn-danger"  data-id="<%= product._id %>"  id="btn-danger">
                                                        <i class="fas fa-trash-alt me-1"></i> Delete
                                                    </button>
                                                </div>
                                            </td>
                                        </tr>
                                    <% }); %>
                                </tbody>
                            </table>
                        </div>
                    <% } else { %>
                        <div class="empty-state text-center py-5">
                            <i class="fas fa-trash-alt empty-icon mb-3"></i>
                            <h3>No Deleted Category</h3>
                            <p class="text-muted">There are no Category in the soft-deleted list.</p>
                        </div>
                    <% } %>
                </div>
            </div>
        </div>
        
</div>
</main>
    

    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <!-- Bootstrap & jQuery Bundle -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="/js/admin/categoryDelete.js"></script>

</body>
</html>