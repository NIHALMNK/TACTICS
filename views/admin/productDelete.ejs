<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>Soft Deleted Products</title>

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

    <!-- Font Awesome for Icons -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">

    
    <!-- Custom CSS -->
    <link rel="stylesheet" href="/css/admin/productDelete.css">
</head>
<body>
       <!--------------------------------------------------->


     <!-- Include Sidebar (similar to reference code) -->
  <%- include('./layout/asidebar.ejs') %>

  <main class="main-content">
    <div class="container-fluid">

        <div class="container soft-delete-container">
            <div class="header-section mb-4">
                <h2 class="d-flex align-items-center gap-2">
                    <i class="fas fa-trash-restore-alt"></i>
                    <span>Soft Deleted Products</span>
                </h2>
            </div>
        
            <!-- Check for Deleted Products -->
            <% if (deletedProducts && deletedProducts.length > 0) { %>
                <div class="table-responsive">
                    <table class="table table-hover align-middle">
                        <thead>
                            <tr>
                                <th scope="col">Product Name</th>
                                <th scope="col" class="text-center">Recover</th>
                                <th scope="col" class="text-center">Permanent Delete</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% deletedProducts.forEach(product => { %>
                                <tr>
                                    <td class="product-name" data-label="Product Name">
                                        <span class="product-title"><%= product.name %></span>
                                    </td>
                                    <td class="text-center action-cell" data-label="Recover">
                                        <button class="btn btn-recover " id="btn-recover" data-id="<%= product._id %>">
                                            <i class="fas fa-undo me-2"></i>Recover
                                        </button>
                                    </td>
                                    <td class="text-center action-cell" data-label="Permanent Delete">
                                        <button class="btn btn-danger btn-delete" data-id="<%= product._id %>" type="button" aria-label="Delete product">
                                            <i class="fas fa-trash-alt me-2" aria-hidden="true"></i>Delete
                                        </button>
                                    </td>
                                </tr>
                            <% }); %>
                        </tbody>
                    </table>
                </div>
            <% } else { %>
                <!-- Empty State -->
                <div class="empty-state">
                    <div class="empty-state-icon">
                        <i class="fas fa-box-open"></i>
                    </div>
                    <h3>No Deleted Products</h3>
                    <p class="text-secondary">There are no products in the soft-deleted list.</p>
                </div>
            <% } %>
        </div>

</div>
</main>

    <!-- Scripts -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="/js/admin/productDelete.js">
 
    </script>
</body>
</html>
