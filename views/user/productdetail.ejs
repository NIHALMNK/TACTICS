});

    // Handle "Decrease" button click
    decreaseBtn.addEventListener('click', () => {
        let currentValue = parseInt(quantityInput.value);

        if (currentValue > 1) {
            quantityInput.value = currentValue - 1;
        } else {
            Swal.fire('Wait!',"cannot decrease !","failed");
        }
    });

});

