    <script>
     document.addEventListener("DOMContentLoaded", function () {
            const carousel = document.getElementById("mainCarousel");

            function animateLayers(layers) {
                layers.forEach((layer, index) => {
                    layer.style.animationDelay = `${index * 0.5}s`; // Smooth delay
                    layer.classList.remove("animated"); // Reset animation
                    void layer.offsetWidth; // Trigger reflow to restart animation
                    layer.classList.add("animated");
                });
            }

            // Add event listener for carousel slide changes
            carousel.addEventListener("slid.bs.carousel", function (event) {
                const activeSlide = event.relatedTarget;
                const layers = activeSlide.querySelectorAll(".layer-slick1");
                animateLayers(layers);
            });

            // Animate first slide on page load
            const firstSlideLayers = document.querySelectorAll(
                ".carousel-item.active .layer-slick1"
            );
            animateLayers(firstSlideLayers);
        });
