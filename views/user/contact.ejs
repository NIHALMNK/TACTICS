  <script>
    // Parallax effect on scroll
    window.addEventListener("scroll", function () {
      const header = document.querySelector(".heading-container");
      const scrollPosition = window.pageYOffset;
      header.style.backgroundPositionY = scrollPosition * 0.5 + "px";
    });


    //----------------------------------------------------------------->
    // Initialize and add the map
    function initMap() {
            // The location of the marker (New York coordinates)
            const location = { lat: 40.7268, lng: -74.0076 };

            // Map options
            const mapOptions = {
                zoom: 15,
                center: location,
                styles: [
                    {
                        "featureType": "all",
                        "elementType": "geometry",
                        "stylers": [
                            { "saturation": -80 }
                        ]
                    },
                    {
                        "featureType": "water",
                        "elementType": "geometry.fill",
                        "stylers": [
                            { "color": "#a3c7df" }
                        ]
                    }
                ],
                disableDefaultUI: true,
                zoomControl: true
            };

            // The map
            const map = new google.maps.Map(document.getElementById("map"), mapOptions);

            // The marker
            const marker = new google.maps.Marker({
                position: location,
                map: map,
                title: "Our Location"
            });
        }

        // Load Google Maps API dynamically
        function loadGoogleMaps() {
            const script = document.createElement('script');
            script.src = `https://maps.googleapis.com/maps/api/js?key=AIzaSyBfI74U1ADa2S-qDmnT7lv4R192IQTqeWk&callback=initMap`;
            script.async = true;
            script.defer = true;
            script.onerror = () => console.error("Google Maps API failed to load.");
            document.head.appendChild(script);
        }

        // Call the function to load the map
        loadGoogleMaps();
  </script>

