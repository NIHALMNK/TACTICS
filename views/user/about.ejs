  <link rel="icon" type="image/x-icon" href="/images/produts-tactics/LOGO/3.png">

  <link href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.2/css/bootstrap.min.css" rel="stylesheet" />
  <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet" />

  <style>
    *,
    *::before,
    *::after {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }

    /* Custom Properties */
    :root {
      --primary-color: #333;
      --accent-color: #ffd700;
      --text-color: #4a4a4a;
      --max-width: 1200px;
      --transition: all 0.3s ease-in-out;
    }

    /* Main Styles */
    .about-section {
      padding: 5rem 2rem;
      max-width: var(--max-width);
      margin: 0 auto;
    }

    .about-container {
      display: grid;
      grid-template-columns: 1fr 1fr;
      gap: 4rem;
      align-items: center;
    }

    .about-image {
      position: relative;
      overflow: hidden;
      border-radius: 10px;
      box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
    }

    .about-image img {
      width: 100%;
      height: auto;
      transition: var(--transition);
      transform: scale(1);
    }

    .about-image:hover img {
      transform: scale(1.05);
    }

    .about-content h2 {
      font-size: 2.5rem;
      margin-bottom: 1.5rem;
      position: relative;
    }

    .about-content h2::after {
      content: "";
      position: absolute;
      left: 0;
      bottom: -0.5rem;
      width: 60px;
      height: 3px;
      background-color: var(--accent-color);
    }

    .about-content p {
      font-size: 1.1rem;
      line-height: 1.6;
      color: var(--text-color);
      margin-bottom: 1rem;
    }

    .highlight {
      font-weight: 600;
      color: var(--primary-color);
    }

    /* Responsive Design */
    @media (max-width: 768px) {
      .about-container {
        grid-template-columns: 1fr;
        gap: 2rem;
      }

      .about-content h2 {
        font-size: 2rem;
      }

      .about-content p {
        font-size: 1rem;
      }
    }

    /* Animation */
    @keyframes fadeIn {
      from {
        opacity: 0;
        transform: translateY(20px);
      }

      to {
        opacity: 1;
        transform: translateY(0);
      }
    }

    .animate {
      animation: fadeIn 0.8s ease-out forwards;
    }

    /*---------------------------------------------------------------------------------------------------------------------------------*/

    /* Spirit Section Styles */
    .spirit-section {
      background-color: #f8f9fa;
      position: relative;
      overflow: hidden;
    }

    /* Spirit Statement Styles */
    .spirit-statement h2 {
      color: #333;
      font-weight: 600;
      line-height: 1.4;
    }

    /* Values Container Styles */
    .values-container {
      display: flex;
      flex-direction: column;
      gap: 2rem;
      margin: 3rem 0;
    }

    /* Value Card Styles */
    .value-card {
      background: white;
      padding: 2rem;
      border-radius: 12px;
      box-shadow: 0 4px 6px rgba(0, 0, 0, 0.05);
      display: flex;
      align-items: center;
      gap: 1.5rem;
      transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

    .value-card:hover {
      transform: translateY(-5px);
      box-shadow: 0 8px 12px rgba(0, 0, 0, 0.1);
    }

    .value-icon {
      background: linear-gradient(45deg, #ffd700, #ffc107);
      width: 50px;
      height: 50px;
      border-radius: 50%;
      display: flex;
      align-items: center;
      justify-content: center;
      flex-shrink: 0;
    }

    .value-icon i {
      color: white;
      font-size: 1.5rem;
    }

    .value-text {
      margin: 0;
      font-size: 1.1rem;
      line-height: 1.6;
      color: #4a4a4a;
    }

    /* Foundation Story Styles */
    .foundation-story {
      padding: 3rem 0;
    }

    .foundation-text {
      font-size: 1.2rem;
      line-height: 1.8;
      color: #555;
      margin-bottom: 1rem;
    }

    .foundation-mission {
      font-size: 1.4rem;
      font-weight: 600;
      color: #333;
      padding: 1.5rem;
      border-radius: 8px;
      background: white;
      box-shadow: 0 4px 6px rgba(0, 0, 0, 0.05);
      transition: transform 0.3s ease;
    }

    .foundation-mission:hover {
      transform: scale(1.02);
    }

    /* Highlight Styles */
    .highlight {
      color: #ffd700;
      font-weight: bold;
    }

    /* Responsive Styles */
    @media (max-width: 768px) {
      .value-card {
        padding: 1.5rem;
      }

      .value-icon {
        width: 40px;
        height: 40px;
      }

      .value-icon i {
        font-size: 1.2rem;
      }

      .value-text {
        font-size: 1rem;
      }

      .foundation-text {
        font-size: 1.1rem;
      }

      .foundation-mission {
        font-size: 1.2rem;
        padding: 1rem;
      }
    }

    /* Animation Styles */
    [data-aos] {
      transition-duration: 0.8s;
      transition-timing-function: ease-out;
    }

    .spirit-section::before {
      content: "";
      position: absolute;
      top: 0;
      left: 0;
      right: 0;
      height: 4px;
      background: linear-gradient(90deg, #ffd700, transparent);
    }

    /* Brand Identity Section Styles */
    .brand-identity {
      background-color: #ffffff;
    }

    .brand-title {
      font-size: 2.5rem;
      line-height: 1.2;
      color: #333;
    }

    .capabilities-text {
      font-size: 1.2rem;
      color: #666;
    }

    /* Stats Styles */
    .stat-card {
      padding: 1.5rem;
      position: relative;
    }

    .stat-number {
      font-size: 3rem;
      font-weight: bold;
      color: #333;
      display: inline-block;
    }

    .stat-plus {
      font-size: 1.5rem;
      font-weight: bold;
      color: #333;
    }

    .stat-label {
      font-size: 1.1rem;
      color: #666;
      margin-top: 0.5rem;
    }

    .stat-subtext {
      font-size: 0.9rem;
      color: #888;
      margin-top: 0.25rem;
    }

    /* Features Section Styles */
    .features-section {
      background-color: #ffd700;
      border-radius: 1rem;
      padding: 3rem 0;
    }

    .feature-card {
      padding: 2rem;
      background-color: transparent;
      transition: transform 0.3s ease;
    }

    .feature-card:hover {
      transform: translateY(-5px);
    }

    .feature-card h3 {
      font-size: 1.5rem;
      color: #333;
      margin-bottom: 1rem;
    }

    .feature-card p {
      color: #444;
      font-size: 1.1rem;
      line-height: 1.6;
    }

    /* Responsive Adjustments */
    @media (max-width: 768px) {
      .brand-title {
        font-size: 2rem;
      }

      .capabilities-text {
        font-size: 1rem;
      }

      .stat-number {
        font-size: 2.5rem;
      }

      .stat-plus {
        font-size: 1.2rem;
      }

      .feature-card {
        padding: 1.5rem;
      }

      .feature-card h3 {
        font-size: 1.3rem;
      }

      .feature-card p {
        font-size: 1rem;
      }
    }

    @media (max-width: 576px) {
      .brand-title {
        font-size: 1.8rem;
      }

      .stats-container {
        gap: 1rem;
      }

      .stat-card {
        padding: 1rem;
      }
    }

    /*-----------------------------------------------------*/
    /* Workshop Section Styles */
    .workshop-section {
      background-color: #f8f9fa;
      position: relative;
      overflow: hidden;
    }

    .workshop-container {
      position: relative;
    }

    .workshop-image {
      position: relative;
      width: 100%;
      height: 400px;
      overflow: hidden;
      border-radius: 1rem;
      box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
    }

    .workshop-main-img {
      width: 100%;
      height: 100%;
      object-fit: cover;
      transition: transform 0.6s ease;
    }

    .workshop-overlay {
      position: absolute;
      bottom: 0;
      left: 0;
      right: 0;
      background: linear-gradient(to top, rgba(0, 0, 0, 0.7), transparent);
      padding: 2rem;
      color: white;
      transform: translateY(100%);
      transition: transform 0.4s ease;
    }

    .workshop-image:hover .workshop-overlay {
      transform: translateY(0);
    }

    .workshop-image:hover .workshop-main-img {
      transform: scale(1.05);
    }

    .workshop-overlay h3 {
      font-size: 1.5rem;
      margin-bottom: 0.5rem;
    }

    .workshop-overlay p {
      font-size: 1rem;
      margin: 0;
      opacity: 0.9;
    }

    .section-title {
      font-size: 2rem;
      color: #333;
      font-weight: 600;
    }

    .workshop-description {
      font-size: 1.1rem;
      line-height: 1.8;
      color: #666;
    }

    .title-underline {
      width: 60px;
      height: 3px;
      background-color: #ffd700;
      margin-top: 1rem;
    }

    /* Responsive Adjustments */
